<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.root.sharide.NewRideActivity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_awesome_toolbar"
        android:padding="16dp"
        android:id="@+id/relativeLayout">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_and_end"
            android:weightSum="2"
            android:layout_below="@id/my_awesome_toolbar">
        <android.support.v7.widget.CardView
            android:layout_marginTop="24dp"
            android:id="@+id/originCard"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/originSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:dropDownSelector="@drawable/abc_spinner_textfield_background_material"
                app:spinnerMode="dropdown"
                android:popupElevation="8dp"
                android:prompt="@string/origin"
                android:textColorHint="@color/primary_dark_material_light"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/edittext_bg"
                android:singleLine="true"
                android:padding="12dp"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/destinationCard"
             android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">
            <Spinner
                android:id="@+id/endSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/end"
                android:textColorHint="@color/primary_dark_material_light"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/edittext_bg"
                android:singleLine="true"
                android:padding="12dp"/>
        </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_and_time"
            android:weightSum="2"
            android:layout_below="@id/start_and_end">
            <android.support.v7.widget.CardView
                android:layout_marginTop="24dp"
                android:id="@+id/timecard"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="8dp"
                >
                <TextView
                     android:textSize="20sp"
                    android:background="@drawable/edittext_bg"
                    android:singleLine="true"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/timePicker"
                    android:text="@string/pick_time"
                    android:clickable="true"
                    android:inputType="none"/>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/datecard"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                >
                <TextView
                    android:elevation="4dp"
                     android:textSize="20sp"
                    android:background="@drawable/edittext_bg"
                     android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/datePicker"
                    android:text="@string/pick_date"
                    android:clickable="true"
                    android:inputType="none"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:id="@+id/freeSpaceAndRide"
            android:weightSum="5"
            android:layout_below="@id/date_and_time">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/haveRide"
             android:clickable="true"
            android:textIsSelectable="true"
            android:layout_weight="1"
            android:padding="16dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="I have booked a Ride"/>
        <android.support.v7.widget.CardView
             android:id="@+id/freeSpacecard"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:elevation="4dp"
            android:layout_weight="4"
            >

            <EditText
                android:id="@+id/freeSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:hint="Free Space"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/edittext_bg"
                android:singleLine="true"
                android:padding="12dp"
                android:inputType="number"/>
        </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:id="@+id/AmountAndType"
            android:weightSum="2"
            android:layout_below="@id/freeSpaceAndRide">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/samesex"
                android:clickable="true"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:padding="16dp"
                 android:textSize="14sp"
                android:textColor="#000000"
                android:text="Same Sex"/>

            <android.support.v7.widget.CardView
            android:id="@+id/amountcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_weight="1"
                android:visibility="invisible"
            >

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount to be paid"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/edittext_bg"
                android:singleLine="true"
                android:padding="12dp"
                android:inputType="number"/>
        </android.support.v7.widget.CardView>
            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mode"
            android:weightSum="2"
            android:layout_below="@id/AmountAndType"
            android:layout_above="@+id/button">
            <android.support.v7.widget.CardView
                android:layout_marginTop="24dp"
                android:id="@+id/transportmodecard"
                android:layout_marginRight="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="8dp"
                android:visibility="invisible"
                >
                <Spinner
                    android:textSize="20sp"
                    android:background="@drawable/edittext_bg"
                    android:singleLine="true"
                    android:padding="12dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/transportmode"
                     android:clickable="true"
                    android:inputType="none"/>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/otherinfocard"
                android:layout_marginTop="24dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:visibility="invisible"
                >
                <EditText
                    android:elevation="4dp"
                    android:textSize="16sp"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/otherinfo"
                    android:hint="SET INFO"
                     android:clickable="true"
                    android:inputType="none"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BOOK"
            android:textColor="#ffffff"
             android:textSize="16dp"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:background="@color/theme_primary_dark"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowColor="#24000000"
            android:shadowRadius="2"
            />
    </RelativeLayout>
</RelativeLayout>