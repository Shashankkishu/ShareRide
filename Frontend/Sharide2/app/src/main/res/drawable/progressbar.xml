<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#08000000"
                android:endColor="#08000000"
                android:centerColor="#08000000"
                android:centerY="0.5"
                android:angle="180"
                />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#66C8C7"
                    android:centerColor="#ffbca3c8"
                    android:endColor="#E91E63"
                    android:angle="180"
                    android:centerY="0.5"/>
            </shape>
        </clip>
    </item>

</layer-list>


